<%= simple_form_for partner, data: { controller: "form-input" }, url: partners_profile_path(submitted_partial: "attached_documents"), html: { multipart: true } do |f| %>
  <%= f.fields_for :profile, profile do |pf| %>
    <div class="form-group">
      <h3><strong>Additional Documents</strong></h3>
      <% if profile.documents.attached? %>
        <strong>Attached files:</strong>
        <ul>
          <% profile.documents.each do |doc| %>
            <li><%= link_to doc.blob['filename'], rails_blob_path(doc), class: "font-weight-bold" %></li>
          <% end %>
        </ul>
        <%= pf.file_field :documents, multiple: true, class: "form-control-file" %>
      <% else %>
        <%= pf.file_field :documents, multiple: true, class: "form-control-file" %>
      <% end %>
    </div>
  <% end %>

  <div class="form-group mt-4 d-flex justify-content-start">
    <%= f.button :submit, 'Save and Next', class: 'btn btn-primary mr-2' %>
    <%= link_to 'Submit for Approval', partners_approval_request_path, method: :post, class: 'btn btn-success' %>
  </div>
<% end %>
