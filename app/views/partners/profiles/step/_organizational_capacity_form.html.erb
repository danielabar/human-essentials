<%= simple_form_for partner, data: { controller: "form-input" }, url: partners_profile_path(submitted_partial: "organizational_capacity") do |f| %>
  <%= f.fields_for :profile, profile do |pf| %>
    <div class="form-group">
      <%= pf.input :client_capacity, label: "Client Capacity", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= pf.input :storage_space, label: "Storage Space", as: :radio_buttons, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= pf.input :describe_storage_space, label: "Storage Space Description", class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group mt-4 d-flex justify-content-start">
    <%= f.button :submit, 'Save and Next', class: 'btn btn-primary mr-2' %>
    <%= link_to 'Submit for Approval', partners_approval_request_path, method: :post, class: 'btn btn-success' %>
  </div>
<% end %>
