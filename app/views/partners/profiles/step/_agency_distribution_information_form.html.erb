<%= simple_form_for partner, data: { controller: "form-input" }, url: partners_profile_path(submitted_partial: "agency_distribution_information") do |f| %>
  <%= f.fields_for :profile, profile do |pf| %>
    <h3><strong>Agency Distribution Information</strong></h3>

    <div class="form-group">
      <%= pf.input :distribution_times, label: "Distribution Times", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= pf.input :new_client_times, label: "New Client Times", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= pf.input :more_docs_required, label: "More Docs Required", class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group mt-4 d-flex justify-content-start">
    <%= f.button :submit, 'Save and Next', class: 'btn btn-primary mr-2' %>
    <%= link_to 'Submit for Approval', partners_approval_request_path, method: :post, class: 'btn btn-success' %>
  </div>
<% end %>
